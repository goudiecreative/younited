        "PDF",
        "text",
        "assessment"
      ]
    },
    "lessonSummary": {
      "type": "text"
    },
    "videoUid": {
      "type": "string"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
